# brAIn v2.0 Environment Configuration
# Copy this file to .env and fill in your values

# Environment
ENVIRONMENT=development
DEBUG=true

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Google Drive Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/auth/google/callback

# Langfuse Configuration (LLM Observability)
LANGFUSE_PUBLIC_KEY=your-public-key
LANGFUSE_SECRET_KEY=your-secret-key
LANGFUSE_HOST=https://cloud.langfuse.com

# Database Configuration
DATABASE_URL=postgresql://brain_user:brain_password@localhost:5432/brain_db
POSTGRES_USER=brain_user
POSTGRES_PASSWORD=brain_password
POSTGRES_DB=brain_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Security
SECRET_KEY=your-secret-key-min-32-chars
JWT_SECRET=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Service URLs
BACKEND_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000
WEBSOCKET_URL=ws://localhost:8080

# Cost Management
DAILY_BUDGET_LIMIT=10.00
MONTHLY_BUDGET_LIMIT=300.00
COST_ALERT_THRESHOLD=0.8

# Processing Configuration
MAX_FILE_SIZE_MB=50
SUPPORTED_FILE_TYPES=pdf,docx,xlsx,pptx,txt,md,html,csv,json,xml,epub,rtf,odt
PROCESSING_BATCH_SIZE=10
PROCESSING_TIMEOUT_SECONDS=300

# Monitoring
LOG_LEVEL=info
SENTRY_DSN=
ENABLE_METRICS=true

# Feature Flags
ENABLE_KNOWLEDGE_GRAPH=true
ENABLE_COST_TRACKING=true
ENABLE_PREDICTIVE_MONITORING=true
ENABLE_AI_ASSISTANT=true