{
  "description": "Test scenarios for cost calculation validation",
  "test_cases": [
    {
      "id": "basic_gpt4_calculation",
      "description": "Basic GPT-4 token cost calculation",
      "model": "gpt-4",
      "provider": "openai",
      "input_tokens": 1000,
      "output_tokens": 500,
      "expected_input_cost": 0.03,
      "expected_output_cost": 0.06,
      "expected_total_cost": 0.09,
      "category": "processing"
    },
    {
      "id": "embedding_calculation",
      "description": "Text embedding cost calculation",
      "model": "text-embedding-ada-002",
      "provider": "openai",
      "input_tokens": 2000,
      "output_tokens": 0,
      "expected_input_cost": 0.0002,
      "expected_output_cost": 0.0,
      "expected_total_cost": 0.0002,
      "category": "embedding"
    },
    {
      "id": "large_batch_processing",
      "description": "Large batch processing cost calculation",
      "model": "gpt-3.5-turbo",
      "provider": "openai",
      "input_tokens": 50000,
      "output_tokens": 25000,
      "expected_input_cost": 0.075,
      "expected_output_cost": 0.05,
      "expected_total_cost": 0.125,
      "category": "processing"
    },
    {
      "id": "claude_opus_calculation",
      "description": "Claude Opus cost calculation",
      "model": "claude-3-opus-20240229",
      "provider": "anthropic",
      "input_tokens": 1000,
      "output_tokens": 500,
      "expected_input_cost": 0.015,
      "expected_output_cost": 0.075,
      "expected_total_cost": 0.09,
      "category": "chat"
    },
    {
      "id": "zero_token_edge_case",
      "description": "Edge case with zero tokens",
      "model": "gpt-4",
      "provider": "openai",
      "input_tokens": 0,
      "output_tokens": 0,
      "expected_input_cost": 0.0,
      "expected_output_cost": 0.0,
      "expected_total_cost": 0.0,
      "category": "processing"
    },
    {
      "id": "budget_limit_scenario",
      "description": "Budget limit validation scenario",
      "model": "gpt-4",
      "provider": "openai",
      "input_tokens": 100000,
      "output_tokens": 50000,
      "expected_input_cost": 3.0,
      "expected_output_cost": 6.0,
      "expected_total_cost": 9.0,
      "budget_limit": 5.0,
      "should_exceed_budget": true,
      "category": "processing"
    }
  ],
  "monthly_budget_scenarios": [
    {
      "id": "under_budget",
      "description": "Normal usage under monthly budget",
      "daily_costs": [1.50, 2.30, 1.80, 2.10, 1.90, 0.50, 0.30],
      "monthly_budget": 50.0,
      "expected_remaining": 39.60,
      "expected_percentage_used": 20.8
    },
    {
      "id": "approaching_budget",
      "description": "Usage approaching monthly budget limit",
      "daily_costs": [4.50, 4.20, 3.80, 4.10, 3.90, 2.50, 2.30],
      "monthly_budget": 30.0,
      "expected_remaining": 4.70,
      "expected_percentage_used": 84.33
    },
    {
      "id": "over_budget",
      "description": "Usage exceeding monthly budget",
      "daily_costs": [8.50, 7.20, 9.80, 8.10, 7.90, 6.50, 5.30],
      "monthly_budget": 40.0,
      "expected_remaining": -13.30,
      "expected_percentage_used": 133.25
    }
  ]
}